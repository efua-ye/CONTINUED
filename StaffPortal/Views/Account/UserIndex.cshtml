@using Microsoft.AspNetCore.Identity
@using StaffPortal.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model StaffPortal.Entities.ApplicationUser
@{
    ViewData["Title"] = "User Profile";
}
<!-- ============================================================== -->

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Profile</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Profile Page</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- row -->
<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="white-box">
            <div class="user-bg">
                <img width="100" alt="user" src="~/images/big/img1.jpg">
                <div class="overlay-box">
                    <div class="user-content">
                        <a href="javascript:void(0)"><img src="~/images/users/genu.jpg" class="thumb-lg img-circle" alt="img"></a>
                        <h4 class="text-white">@UserManager.GetUserName(User)</h4>
                        <h5 class="text-white">.</h5>
                    </div>
                </div>
            </div>
            


        </div>
    </div>


<div class="col-md-8 col-xs-12">
    <div class="white-box">
        <a href="http://localhost:49821/UserProfile/PersonalSalary" target="_blank" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>Salary Structure</a>

        <form asp-action="Index" method="post" class="form-horizontal form-material">
            <div asp-validation-summary="All" class="text-danger"></div>



            <div class="form-group">
                <label class="col-md-12" asp-for="FirstName"> FirstName</label>
                <div class="col-md-12">
                    <input type="text" asp-for="FirstName" class="form-control form-control-line" readonly>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="col-md-12"> LastName</label>
                <div class="col-md-12">
                    <input type="text" asp-for="LastName" class="form-control form-control-line" readonly>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-12"> Email</label>
                <div class="col-md-12">
                    <input type="text" asp-for="Email" class="form-control form-control-line" readonly>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-12"> Country</label>
                <div class="col-md-12">
                    <input type="text" asp-for="Country" class="form-control form-control-line" readonly>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-12"> State</label>
                <div class="col-md-12">
                    <input type="text" asp-for="NewStates" class="form-control form-control-line" readonly>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-12"> Local Government</label>
                <div class="col-md-12">
                    <input type="text" asp-for="LGAs" class="form-control form-control-line" readonly>
                </div>

            </div>
            @*
            <div class="form-group">
                <label class="col-md-12"> Department</label>
                <div class="col-md-12">
                    <input type="text" asp-for="DepartmentName" class="form-control form-control-line" readonly>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-12"> Faculty</label>
                <div class="col-md-12">
                    <input type="text" asp-for="FacultyName" class="form-control form-control-line" readonly>
                </div>

            </div>

