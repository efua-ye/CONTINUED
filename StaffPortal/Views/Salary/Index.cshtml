
@model StaffPortal.Models.SalaryMonthViewModel
@*@model IEnumerable<StaffPortal.Entities.Salary>*@
@{
    ViewBag.Title = "Index";
}
<!-- ============================================================== -->

<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Salary</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Salary</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="white-box">

            <a asp-controller="Salary" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Salary</a>
            <div style="font-family:Arial">

                <form asp-controller="Salary" asp-action="Index" method="get">
                    <p>
                        Month: <select asp-for="SalaryMonth" asp-items="Model.Months">
                            <option value="">All</option>
                        </select>

                        Year: <select asp-for="SalaryYear" asp-items="Model.Years">
                            <option value="">All</option>
                        </select>


                        <br />
                        Word index: <input type="text" name="SearchString">
                        <input type="submit" value="Filter" />
                    </p>
                </form>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("Id", "Index", new { Sorting_Order = ViewBag.SortingId })
                                </th>
                                <th>
                                    @Html.ActionLink("Month", "Index", new { Sorting_Order = ViewBag.SortingMonth })
                                </th>
                                <th>
                                    @Html.ActionLink("Year", "Index", new { Sorting_Order = ViewBag.SortingYear })
                                </th>
                                <th>
                                    @Html.ActionLink("UserProfile", "Index", new { Sorting_Order = ViewBag.Sortinguser })
                                </th>
                                <th>
                                    @Html.ActionLink("CreatedBy", "Index", new { Sorting_Order = ViewBag.SortingCreate })
                                </th>
                                <th>
                                    @Html.ActionLink("DateCreated", "Index", new { Sorting_Order = ViewBag.SortingDate })
                                </th>
                                
                            </tr>
                           
                        </thead>
                        <tbody>

                            @foreach (var Salary in Model.Sals)
                            {
                                <tr>
                                    <td>@Salary.Id</td>

                                    <td>@Salary.Month  </td>
                                    <td>@Salary.Year </td>

                                    <td>@Salary.CreatedBy  </td>
                                    <td>@Salary.DateCreated    </td>

                                    <td>

                                    <td><a asp-action="Edit" asp-route-id="@Salary.Id" alt="Edit"><i class="ti-pencil" aria-hidden="true"></i></a> </td>
                                    <td><a onclick="return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@Salary.Id"><i class="ti-trash" aria-hidden="true"></i></a> </td>

                                </tr>


                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>