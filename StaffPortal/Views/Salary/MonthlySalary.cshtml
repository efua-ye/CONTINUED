@using Microsoft.AspNetCore.Identity
@using StaffPortal.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model StaffPortal.Entities.Salary;
@{
    ViewData["Title"] = "Index";
  //  Layout = "~/Views/Shared/Blanket.cshtml";

}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Salary Report</h3>
    </div>
    <!--   <div class="col-md-7 align-self-center">
         <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
      </div>-->
</div>
<div class="row">
    <!-- column -->
    <div class="col-sm-12">
        <div class="white-box">
            <h2 align="center"> @UserManager.GetUserName(User)'s Salary Details</h2>
            <div class="table-responsive">
                @*@foreach (var user in Model.Appuser)
                {
                    <label> <span>FirstName</span> : @user.FirstName<></label>
                    <label> <span>LastName</span> : @user.LastName<></label>
                    <label> <span>Email</span> : @user.Email<></label>
                    <label> <span>State</span> : @user.NewStates<></label>
                    <label> <span>Local Government</span> : @user.LGAs<></label>
                    <label> <span>Country</span> : @user.Country<></label>

                }*@
                <form asp-action="Index" method="post" class="mt-4">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="table-responsive">
                        <table class="table">

                            <tbody>
                                <tr>
                                    <td><span><strong>Email</strong></span> : @Model.UserProfile.Email </td>
                                    <td><span><strong>Grade</strong></span>  : @Model.UserProfile.GradeName</td>
                                </tr>
                                <tr>
                                    <td><span><strong>Level</strong></span>  : @Model.UserProfile.GradeLevel</td>
                                    <td><span><strong>Step</strong></span> : @Model.UserProfile.GradeStep</td>
                                </tr>
                                <tr>
                                    <td><span><strong>Month</strong></span>  : @Model.Month</td>
                                    <td><span><strong>Year</strong></span> : @Model.Year</td>
                                </tr>
                            </tbody>
                        </table>

                        <br />
                        <p>   <h3>Basic Salary: @Model.UserProfile.BasicSalary</h3></p>
                        <br />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><strong>PayItem </strong></th>
                                    <th>Amount</th>
                                    <th>%</th>
                                    <th>PayItem Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Tax</strong></td>
                                    <td>@Model.UserProfile.Tax</td>
                                    <td>@Model.UserProfile.TaxPercent</td>


                                </tr>
                                <tr>
                                    <td><strong>Housing</strong></td>
                                    <td>@Model.UserProfile.Housing</td>
                                    <td>@Model.UserProfile.HousingPercent</td>


                                </tr>
                                <tr>
                                    <td><strong>Lunch</strong></td>
                                    <td>@Model.UserProfile.Lunch</td>
                                    <td>@Model.UserProfile.LunchPercent</td>


                                </tr>
                                <tr>
                                    <td><strong>Transport</strong></td>
                                    <td>@Model.UserProfile.Transport</td>
                                    <td>@Model.UserProfile.TransportPercent</td>


                                </tr>
                                <tr>
                                    <td><strong>Medical</strong></td>
                                    <td>@Model.UserProfile.Medical</td>
                                    <td>@Model.UserProfile.MedicalPercent</td>


                                </tr>

                            </tbody>
                        </table>
                        <br />
                        <div>
                            <p><h3>Net Allowance: @Model.UserProfile.TotAllowance</h3></p>
                        </div>
                        <div>
                            <p><h3>Net Deduction: <span style="color:red">@Model.UserProfile.TotDeduction</span></h3></p>
                        </div>
                        <div>
                            <p><h3>Net Salary: @Model.UserProfile.NetPay</h3></p>
                        </div>
                    </div>
                    @*<input type="button" value="Print" onclick="window.print()" />*@

                    @*<a asp-action="Cancell" type="button" class="btn btn-dark">Cancel</a>*@
                </form>
            </div>
        </div>
    </div>
</div>


