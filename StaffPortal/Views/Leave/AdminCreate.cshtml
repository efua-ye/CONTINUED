@model StaffPortal.Entities.Leave
@{
    ViewData["Title"] = "Leave";
}
<!-- ============================================================== -->
<script type="text/javascript">function CheckReason(val) {
        var element = document.getElementById('reason');
    if (val == 'Choose Option' || val == 'others')
            element.style.display = 'block';
        else
            element.style.display = 'none';
    }</script>


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Leave</h3>
    </div>
