@model IEnumerable<StaffPortal.Entities.Grade>
@{
    ViewData["Title"] = "Grades";
}
<div class="row bg-title">
    <div class="col-lg-12">
        <h4 class="page-title">Grade</h4>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            <li class="active">Grade</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-12">
    <div class="card">

        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <a asp-controller="Grade" asp-action="Create" class="btn btn-rounded btn-info">Setup Salary</a>
            </div>
        </div><br />
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Level</th>
                        <th>Step</th>
                        <th>Basic Salary</th>
                        <th>Tax</th>
                        <th>Lunch</th>
                        <th>Housing</th>
                        <th>Medical</th>
                        <th>Transport</th>
                        <th>Total Allowance</th>
                        <th>Total Deduction</th>
                        <th>Net Salary</th>
                        <th>Created By</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var grade in Model)
                    {
                        <tr>
                            <td>@grade.Id</td>
                            <td>@grade.GradeName  </td>
                            <td>@grade.Level </td>
                            <td>@grade.Step </td>
                            <td>@grade.BasicSalary</td>
                            <td>@grade.Tax</td>
                            <td>@grade.Lunch</td>
                            <td>@grade.Housing</td>
                            <td>@grade.Medical</td>
                            <td>@grade.Transport</td>
                            <td>@grade.TotAllowance</td>

                            <td><span style="color:red">@grade.TotDeduction </span></td>
                            <td>@grade.NetSalary</td>

                            <td>@grade.CreatedBy  </td>
                            <td>@grade.DateCreated    </td>

                            <td><a asp-action="Edit" asp-route-id="@grade.Id" alt="Edit"><i class="ti-pencil" aria-hidden="true"></i></a> </td>
                            <td><a onclick="return confirm('Are you sure you want to delete this record');" asp-action="Delete" asp-route-id="@grade.Id"><i class="ti-trash" aria-hidden="true"></i></a> </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>